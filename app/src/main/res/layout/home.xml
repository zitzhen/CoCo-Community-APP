<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- 主要内容区域的滚动视图 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 顶部欢迎区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/welcomeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="欢迎回来！"
                    android:textSize="28sp"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="用户"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp"/>

                <TextView
                    android:id="@+id/searchPrompt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="你今天想要在CoCo-Community搜索什么？"
                    android:textSize="18sp"
                    android:textColor="@color/gray_700"
                    android:layout_marginBottom="16dp"/>

            </LinearLayout>

            <!-- 搜索框区域 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/light_gray"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_search"
                        android:layout_marginEnd="12dp"
                        android:tint="@color/gray_600"
                        android:contentDescription="搜索图标"/>

                    <EditText
                        android:id="@+id/searchEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="输入关键词搜索..."
                        android:textSize="16sp"
                        android:background="@null"
                        android:padding="4dp"
                        android:maxLines="1"
                        android:imeOptions="actionSearch"
                        android:inputType="text"/>

                    <ImageButton
                        android:id="@+id/clearButton"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_clear"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:visibility="gone"
                        android:tint="@color/gray_600"
                        android:contentDescription="清除内容"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/publishPrompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="或者你有控件或文章需要发布吗？"
                android:textSize="18sp"
                android:textColor="@color/gray_700"
                android:layout_marginBottom="24dp"/>

            <!-- 按钮区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <!-- 发布控件按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/publishWidgetButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="发布控件"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_widgets"
                    app:iconGravity="start"
                    app:iconPadding="8dp"
                    app:backgroundTint="@color/primary_color"
                    android:paddingVertical="14dp"/>

                <!-- 发布文章按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/publishArticleButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="发布文章"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_article"
                    app:iconGravity="start"
                    app:iconPadding="8dp"
                    app:backgroundTint="@color/secondary_color"
                    android:paddingVertical="14dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- 底部导航栏 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        android:background="@color/white"
        app:elevation="8dp"/>

</LinearLayout>